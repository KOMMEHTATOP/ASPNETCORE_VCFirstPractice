@model IEnumerable<VCFirstPractice.Models.BooksModel>

@{
    ViewData["Title"] = "Books List";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Books List</h1>

    <div class="mb-3">
        <a asp-controller="MyPage" asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Add New Book</a>
    </div>
    
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Title</th>
                <th>Author</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.DisplayNumber</td>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.Price.ToString("C")</td> <!-- Форматируем цену как валюту -->
                    <td>
                        <div>
                            <a asp-controller="MyPage" asp-route-id="@book.Id" asp-action="Edit"
                               class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i></a>
                            <a asp-controller="MyPage" asp-route-id="@book.Id" asp-action="Delete"
                               class="btn btn-danger"><i class="fa-solid fa-trash-can"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>