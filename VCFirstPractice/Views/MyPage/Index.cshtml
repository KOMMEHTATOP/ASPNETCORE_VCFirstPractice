@model IEnumerable<VCFirstPractice.Models.BooksModel>

@{
    ViewData["Title"] = "Books List";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Books List</h1>

    <div class="mb-3">
        <a asp-controller="MyPage" asp-action="AddNewBook" class="btn btn-primary">Add New Book</a>
    </div>
    
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Author</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Id</td>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.Price.ToString("C")</td> <!-- Форматируем цену как валюту -->
                </tr>
            }
        </tbody>
    </table>
</div>